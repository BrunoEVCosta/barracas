extends layout

block content
  a(href="/admin")
    h1 Gest√£o de accessos activos
  table.table.table-hover
    thead
      th ID
      th Nome
      th IP
      th Plataforma
      th Revoke
    tbody
      for row in dados
        tr(accessId=row.accessId)
          td=row.accessId
          td=row.name 
          td=row.ip 
          td=row.platform 
          td
            form(method="POST",action="/users/revoke/access/")
              input(id="id",name="id",type="hidden",value=row.accessId)
              button.btn.btn-dark(type="submit") Revoke