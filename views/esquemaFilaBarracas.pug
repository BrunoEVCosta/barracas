extends layout

block content
	h1=title


	.fila
		for item in dados
			if item.number.endsWith("A")
				button.btn.tent.annex(id=item.id,rented=item.rented,reserved=item.reserved,pago=item.pago,frontal=item.frontal,type="button",data-toggle="collapse",data-target="#collapse"+item.id,aria-expanded="false",aria-controls="collapse",style="grid-column: 2 / 2;")=item.number
				.collapse.annex(id="collapse"+item.id)
					.aluger.card.card-body
						if item.frontal
							.btn.btn-primary.btn-lg.day.frontal Dia (8€)
						else
							.btn.btn-primary.btn-lg.day.side Dia (7€)
						.btn.btn-primary.btn-lg Meio Dia (5€)
						.form-inline
							.form-group
								label(for="otherValue") Outro valor: &nbsp; 
								input.form-control(id="otherValue",type="text",size="3")
								.input-group-prepend
									.input-group-text €
			else
				button.btn.tent(id=item.id,rented=item.rented,reserved=item.reserved,pago=item.pago,frontal=item.frontal,type="button",data-toggle="collapse",data-target="#collapse"+item.id,aria-expanded="false",aria-controls="collapse")=item.number
				.collapse.multi-collapse(id="collapse"+item.id,style="grid-column: 1 / 2;")
					.aluger.card.card-body
						if item.frontal
							.btn.btn-primary.btn-lg.day.frontal Dia (8€)
						else
							.btn.btn-primary.btn-lg.day.side Dia (7€)
						.btn.btn-primary.btn-lg Meio Dia (5€)
						.form-inline
							.form-group
								label(for="otherValue") Outro valor: &nbsp; 
								input.form-control(id="otherValue",type="text",size="3")
								.input-group-prepend
									.input-group-text €